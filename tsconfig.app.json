{
  "compilerOptions": {
    /* Target modern browsers + ES features */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* React JSX */
    "jsx": "react-jsx",

    /* File handling */
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Type checking / linting */
    "strict": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    /* Paths / Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  /* Includes the entire source folder */
  "include": ["src"]
}
