{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],

  "compilerOptions": {
    "baseUrl": ".",

    /* PATH ALIASES */
    "paths": {
      "@/*": ["src/*"]
    },

    /* STRICTNESS & LINTING */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "strictNullChecks": false,

    /* JS SUPPORT */
    "allowJs": true
  }
}
